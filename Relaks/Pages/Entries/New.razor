@page "/entries/new"
@using Relaks.Models.Requests.EntryRequests
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@using Relaks.Models
@using System.Text.Json

<PageTemplate>
    <div class="row">
        <div class="col-6 offset-3">
            <MyTitle>
                <BeforeTitle>
                    <a href="/entries" class="btn btn-outline-secondary">
                        <i class="las la-arrow-left la-lg me-1"></i> Вернуться
                    </a>
                </BeforeTitle>
                <ChildContent>Новое объединение</ChildContent>
            </MyTitle>
            
            
            @JsonSerializer.Serialize(Req);
            <EditForm Model="@Req">
                <FormFields @bind-Req="@Req"/>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        Добавить
                    </button>
                </div>
            </EditForm>
        </div>
    </div>  
</PageTemplate>

@code {
    private EntryFormRequest Req { get; set; } = new();
}