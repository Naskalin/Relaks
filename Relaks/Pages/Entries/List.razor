@page "/entries"
<PageTemplate>
    <MyTitle>
        <ChildContent>Объединения</ChildContent>
        <EndTitle>
            <a href="/entries/new" class="btn btn-primary">
                <i class="las la-plus-circle la-lg me-1"></i>
                Добавить
            </a>
        </EndTitle>
    </MyTitle>
    
    <EntryList OnRowClicked="OnRowClicked"></EntryList>
</PageTemplate>

@code {
    [Inject]
    public NavigationManager NavigationManager { get; set; } = null!;

    private void OnRowClicked(Guid entryId)
    {
        NavigationManager.NavigateTo("/entries/" + entryId);
    }
}