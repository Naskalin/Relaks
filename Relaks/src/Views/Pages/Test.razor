@page "/test"

@inject DialogService DialogService;

<PageTemplate>
    <MyTitle>Test</MyTitle>

    <button type="button" class="btn btn-primary" @onclick="() => Modal1.Show()">Modal 1</button>

    <Modal @ref="Modal1" IsKeyboard="@true" IsBackdrop="@true">
        <ModalDialog Title="Modal 1" Size="Size.Small">
            <BodyTemplate>
                <h1>Modal 1</h1>

                <button type="button" class="btn btn-success" @onclick="@ShowDynamicModal">Modal 2</button>
