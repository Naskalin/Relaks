                @*         </BodyTemplate> *@
                @*     </ModalDialog> *@
                @* </Modal> *@
            </BodyTemplate>
        </ModalDialog>
    </Modal>


</PageTemplate>

@code {
    private Modal Modal1 { get; set; } = new();
    // private Modal Modal2 { get; set; } = new();
    private Task ShowDynamicModal()
    {
        return DialogService.Show(new DialogOption()
        {
            Title = "Resize dialog",
            ShowResize = true,
            BodyTemplate = builder => builder.AddContent(0, "I am content")
        });
    }
}