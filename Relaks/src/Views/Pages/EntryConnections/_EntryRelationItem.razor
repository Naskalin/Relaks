@using Relaks.Models

<div class="row align-items-center">
    <div class="col-5">
        <div class="border rounded p-2 mb-2">
            <div class="row align-items-center">
                <div class="col">
                    <EntryInlineItem EntryId="@EntryRelation.FirstId"/>
                </div>
                <div class="col-auto">
                    <span class="fw-medium">@EntryRelation.FirstRating</span>
                    <i class="las la-star la-lg text-secondary"></i>
                </div>
            </div>
        </div>
        <div class="border rounded p-2">
            <div class="row align-items-center">
                <div class="col">
                    <EntryInlineItem EntryId="@EntryRelation.SecondId"/>
                </div>
                <div class="col-auto">
                    <span class="fw-medium">@EntryRelation.SecondRating</span>
                    <i class="las la-star la-lg text-secondary"></i>
                </div>
            </div>
        </div>
        
    </div>
    <div class="col-7">
        <div class="small">
            <TextTruncateCollapse Text="@EntryRelation.Description" MaxLength="500"/>
        </div>
    </div>
</div>
@code {

    [Parameter]
    public EntryRelation EntryRelation { get; set; } = null!;

}