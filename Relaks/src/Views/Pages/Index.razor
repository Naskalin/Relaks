@page "/"
@using Relaks.Database
@using Relaks.Models.Store

@inject AppDbContext Db;

<PageTemplate>
    <MyTitle>
        <ChildContent>Relaks - Взаимоотношения, расчёты и задачи</ChildContent>
        <Subtitle>
            <b class="text-dark">Re</b>lationships, calcu<b class="text-dark">la</b>tions and tas<b class="text-dark">ks</b>
        </Subtitle>
    </MyTitle>
    
    <div class="d-flex flex-column gap-4">
        <div class="row">
            @foreach (var item in Store.EntryCounts)
            {
                <div class="col">
                    <NumberStat Label="@item.Key"
                                Number="@item.Value.ToString()"
                                class="bg-secondary text-white"/>
                </div>
            }
        </div>
        
        <div class="row">
            @foreach (var item in Store.FileCounts)
            {
                <div class="col">
                    <NumberStat Label="@item.Key"
                                Number="@item.Value.ToString()"
                                class="bg-dark-subtle text-secondary-emphasis"/>
                </div>
            }
        </div>
        
        <div class="row">
            @foreach (var item in Store.EInfoCounts)
            {
                <div class="col">
                    <NumberStat Label="@item.Key"
                                Number="@item.Value.ToString()"
                                class="bg-secondary text-white"/>
                </div>
            }
        </div>
        
        <div class="row">
            @foreach (var item in Store.EntryRelationships)
            {
                <div class="col">
                    <NumberStat Label="@item.Key"
                                Number="@item.Value.ToString()"
                                class="bg-dark-subtle text-secondary-emphasis"/>
                </div>
            }
        </div>

        <div class="row">
            @foreach (var item in Store.FinancialCounts)
            {
                <div class="col">
                    <NumberStat Label="@item.Key"
                                Number="@item.Value.ToString()"
                                class="bg-secondary text-white"/>
                </div>
            }
        </div>
    </div>

    @* <p>bootstrap icons <i class="bi bi-1-square text-red"></i></p> *@
    @* <p>line awesome icons <i class="las la-info text-red"></i></p> *@
    @* <p>font awesome icons <i class="fa fa-solid fa-info"></i></p> *@
    @* <p> *@
    @*     font awesome icons 2 *@
    @*     <i class="fa-solid fa-arrow-down-up-lock" aria-hidden="true"></i> *@
    @* </p> *@

</PageTemplate>

@code{
    public HomepageStatisticStore Store { get; set; } = null!;

    protected override void OnInitialized()
    {
        Store = new HomepageStatisticStore(Db);
        Store.FindData();
    }
}