@using Relaks.Utils.Extensions
@if (!string.IsNullOrEmpty(Text))
{
    if (Text.Length > MaxLength)
    {
        if (!IsShowFull)
        {
            <span>@Text.Truncate(MaxLength) <button type="button" class="btn btn-link btn-sm" @onclick="@(() => IsShowFull = true)">Показать полностью</button></span>   
        }
        else
        {
            @Text 
        }
    }
    else
    {
        @Text
    }
    
}

@code {
    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public int MaxLength { get; set; } = 300;
    
    private bool IsShowFull { get; set; } = false;
}