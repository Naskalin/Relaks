<div class="row justify-content-between align-items-center mb-3">
    @if (ShowBeforeTitle == true)
    {
        <div class="col-auto">@BeforeTitle</div>
    }
    <div class="col">
        <h1 class="h2 @(IsCentered == true ? "text-center" : "")">@ChildContent</h1>
        @if (Subtitle != null)
        {
            <h2 class="subtitle h4 text-muted" style="margin-top: -.5rem;">@Subtitle</h2>
        }
    </div>
    @if (ShowEndTitle == true)
    {
        <div class="col-auto">@EndTitle</div>
    }
</div>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;

    [Parameter]
    public RenderFragment? Subtitle { get; set; }

    [Parameter]
    public RenderFragment? BeforeTitle { get; set; }
    
    [Parameter]
    public RenderFragment? EndTitle { get; set; }
    
    [Parameter]
    public bool? ShowEndTitle { get; set; }
    
    [Parameter]
    public bool? ShowBeforeTitle { get; set; }
    
    [Parameter]
    public bool? IsCentered { get; set; }

}