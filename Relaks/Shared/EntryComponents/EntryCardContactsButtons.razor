@using Relaks.Models

<div class="my-3 d-flex gap-2 justify-content-center align-items-center">
    @foreach (var d in DataHelper.EntryInfoContactDiscriminators)
    {
        <Tooltip Title="@($"Добавить {d}")" Trigger="hover">
            <NavLink href="@($"/entries/{EntryId}/{d}/new")" class="btn btn-outline-secondary btn-circle">
                <i class="@DataHelper.EntityIcon(d) la-lg"></i>
            </NavLink>
        </Tooltip>
    }
</div>

@code {
    [Parameter]
    public Guid EntryId { get; set; }
}