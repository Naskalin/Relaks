@if (LeftSidebar == null && RightSidebar == null)
{
    <div class="container-fluid py-3">
        @ChildContent
    </div>   
}
else
{
    <div class="container-fluid py-3">
        <div class="row">
            @if (LeftSidebar != null)
            {
                <nav class="col-12 col-sm-4 col-lg-3 col-xxl-2 sidebar">
                    @LeftSidebar
                </nav>
            }
            <main class="col-12 col-sm-8 col-lg-9 col-xxl-10 ms-sm-auto">
                @ChildContent
            </main>
        </div>
    </div>   
}

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;

    [Parameter]
    public RenderFragment? LeftSidebar { get; set; }

    [Parameter]
    public RenderFragment? RightSidebar { get; set; }
}