<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <ApplicationIcon>favicon.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Blazored.LocalStorage" Version="4.3.0" />
      <PackageReference Include="Bogus" Version="34.0.2" />
      <PackageReference Include="BootstrapBlazor" Version="7.6.1" />
      <PackageReference Include="BootstrapBlazor.FontAwesome" Version="7.4.2" />
      <PackageReference Include="libphonenumber-csharp" Version="8.13.9" />
      <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.5" />
      <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="7.0.5">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
      <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="7.0.5" />
      <PackageReference Include="Microsoft.Extensions.Localization" Version="7.0.5" />
      <PackageReference Include="Photino.Blazor" Version="2.5.0" />
      <PackageReference Include="SixLabors.ImageSharp.Web" Version="3.0.1" />
      <PackageReference Include="YamlDotNet" Version="13.0.2" />
    </ItemGroup>

    <ItemGroup>
        <Content Update="wwwroot\**">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <None Update="favicon.ico">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Remove="relaks.yaml" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Resources\App.ru.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>App.ru.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\App.en.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>App.en.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Resources\App.ru.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>App.ru.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\App.en.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>App.en.resx</DependentUpon>
      </Compile>
    </ItemGroup>
</Project>
