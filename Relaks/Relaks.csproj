<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <ApplicationIcon>favicon.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Blazorise.Bootstrap5" Version="1.2.2" />
      <PackageReference Include="Blazorise.Icons.FontAwesome" Version="1.2.2" />
      <PackageReference Include="Bogus" Version="34.0.2" />
      <PackageReference Include="libphonenumber-csharp" Version="8.13.9" />
      <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.5" />
      <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="7.0.5">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
      <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="7.0.5" />
      <PackageReference Include="Photino.Blazor" Version="2.5.0" />
      <PackageReference Include="SixLabors.ImageSharp.Web" Version="3.0.1" />
      <PackageReference Include="YamlDotNet" Version="13.0.2" />
    </ItemGroup>

    <ItemGroup>
        <Content Update="wwwroot\**">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <None Update="favicon.ico">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Remove="relaks.yaml" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Migrations\" />
      <Folder Include="wwwroot\assets\" />
    </ItemGroup>

    <ItemGroup>
      <_ContentIncludedByDefault Remove="wwwroot\css\bootstrap\bootstrap.min.css" />
      <_ContentIncludedByDefault Remove="wwwroot\css\bootstrap\bootstrap.min.css.bak" />
      <_ContentIncludedByDefault Remove="wwwroot\css\bootstrap\_bootswatch (1).scss" />
      <_ContentIncludedByDefault Remove="wwwroot\css\bootstrap\_variables (1).scss" />
      <_ContentIncludedByDefault Remove="wwwroot\css\_app.css" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\css\line-awesome.css" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\css\line-awesome.min.css" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\line-awesome.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_bordered_pulled.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_core.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_fixed-width.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_icons.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_larger.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_list.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_mixins.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_path.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_rotated-flipped.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_screen-reader.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_stacked.scss" />
      <_ContentIncludedByDefault Remove="wwwroot\libs\line-awesome\scss\_variables.scss" />
    </ItemGroup>
</Project>
