<Project Sdk="Microsoft.NET.Sdk.Razor">
    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Blazored.FluentValidation" Version="2.1.0" />
        <PackageReference Include="Blazored.LocalStorage" Version="4.3.0" />
        <PackageReference Include="Bogus" Version="34.0.2" />
        <PackageReference Include="BootstrapBlazor" Version="7.6.2" />
        <PackageReference Include="BootstrapBlazor.FontAwesome" Version="7.4.2" />
        <PackageReference Include="libphonenumber-csharp" Version="8.13.9" />
        <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.5" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="7.0.5">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="7.0.5" />
        <PackageReference Include="Microsoft.Extensions.Localization" Version="7.0.5" />
        <PackageReference Include="SixLabors.ImageSharp.Web" Version="3.0.1" />
        <PackageReference Include="YamlDotNet" Version="13.0.2" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="relaks.yaml" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="src\Resources\Entity.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Entity.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="src\Resources\Action.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Action.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="src\Resources\Entity.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Entity.resx</DependentUpon>
      </Compile>
      <Compile Update="src\Resources\Action.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Action.resx</DependentUpon>
      </Compile>
    </ItemGroup>
</Project>
